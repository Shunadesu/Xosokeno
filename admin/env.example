# Environment Variables for Zuna Xosokeno Admin Panel

# API Configuration (sử dụng relative URLs khi có proxy)
VITE_API_URL=
VITE_SOCKET_URL=

# Hoặc sử dụng absolute URLs khi không có proxy
# VITE_API_URL=http://localhost:5000/api
# VITE_SOCKET_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=Zuna Xosokeno Admin
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=development

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Real-time Updates
VITE_ENABLE_REALTIME=true
VITE_SOCKET_RECONNECT_ATTEMPTS=5
VITE_SOCKET_RECONNECT_DELAY=1000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Security
VITE_ENABLE_CSRF_PROTECTION=true
VITE_TOKEN_REFRESH_INTERVAL=300000
